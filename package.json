{
  "name": "mutaserv",
  "version": "0.0.1",
  "author": "Patrick Borowy <patrick@krzepah.net>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development node api/index",
    "prestart": "npm run create-sqlite-db",
    "test": "npm run create-sqlite-db; cross-env NODE_ENV=testing MUTATIONS=`pwd`/mutations/formated jest --coverage; npm run drop-sqlite-db ; npm run coverage; git add coverage/coverage.svg -f",
    "create-sqlite-db": "shx touch ./database.sqlite",
    "drop-sqlite-db": "shx rm ./database.sqlite",
    "coverage": "coverage-badger -r coverage/clover.xml -d coverage",
    "pre-commit": "npm run test",
    "release": "npm t && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "eslintConfig": {
    "extends": "eslint-config-developit",
    "rules": {
      "prefer-rest-params": 0
    }
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "@polka/send-type": "^0.5.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.0",
    "cross-env": "^5.2.0",
    "jsonwebtoken": "^8.5.1",
    "mutaserv-formater": "^0.0.0",
    "polka": "latest",
    "ramda": "^0.26.1",
    "sequelize": "^5.10.3",
    "shx": "^0.3.2",
    "sqlite3": "^4.0.9"
  },
  "devDependencies": {
    "coverage-badger": "^1.0.1",
    "eslint": "^6.1.0",
    "eslint-config-developit": "^1.1.1",
    "jest": "^24.8.0",
    "pre-commit": "^1.2.2",
    "supertest": "^4.0.2"
  },
  "bin": {
    "mutaserv": "./command.sh"
  }
}
